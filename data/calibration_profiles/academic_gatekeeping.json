{
  "schema_version": "2.0",
  "metadata": {
    "name": "Academic Gatekeeping",
    "description": "Optimized for detecting academic/scientific establishment suppression of paradigm-challenging research. Emphasizes career destruction, publication barriers, and credential attacks.",
    "author": "aegis",
    "created": "2025-11-30T00:00:00Z",
    "tags": ["academic", "archaeology", "science", "paradigm", "peer-review"]
  },
  "scoring": {
    "mode": "goldfinger",
    "happenstance_max": 1,
    "coincidence_max": 2,
    "enemy_action_base": 0.50,
    "logarithmic_factor": 0.20,
    "max_score": 0.95
  },
  "semantic_patterns": {
    "match_mode": "semantic",
    "match_threshold": 0.75,
    "suppression_experiences": {
      "include": [
        "denied tenure", "tenure revoked", "forced out",
        "career destroyed", "academic exile", "blacklisted",
        "unable to publish", "papers rejected", "journal blacklist",
        "funding cut", "grants denied", "funding dried up",
        "ridiculed", "mocked", "attacked by colleagues",
        "ostracized", "shunned", "professional isolation",
        "reputation destroyed", "credibility attacked",
        "work suppressed", "findings buried", "data confiscated"
      ],
      "exclude": []
    },
    "institutional_actions": {
      "include": [
        "tenure denied", "tenure revoked", "contract terminated",
        "position eliminated", "department closed",
        "funding revoked", "grant canceled", "funding blocked",
        "paper retracted", "publication withdrawn",
        "banned from conferences", "uninvited from speaking",
        "removed from editorial board", "expelled from society",
        "degree revoked", "credentials questioned"
      ],
      "exclude": [
        "retired",
        "position filled"
      ]
    },
    "dismissal_language": {
      "include": [
        "pseudoscience", "pseudoarchaeology", "pseudohistory",
        "fringe", "fringe theory", "crackpot", "crank",
        "not a real scientist", "lacks credentials", "amateur",
        "extraordinary claims", "no evidence",
        "not peer reviewed", "not published in reputable journal",
        "rejected by mainstream", "outside consensus",
        "discredited", "debunked", "disproven"
      ],
      "exclude": [
        "methodological critique",
        "replication attempt failed",
        "statistical analysis shows"
      ]
    },
    "suppression_of_record": {
      "include": [
        "ignored by mainstream", "not cited",
        "excluded from textbooks", "omitted from curricula",
        "written out of history", "largely forgotten",
        "work disappeared", "findings never replicated",
        "data lost", "records destroyed",
        "conference proceedings excluded"
      ],
      "exclude": []
    }
  },
  "signal_weights": {
    "suppression_narrative": 0.40,
    "meta_claim_density": 0.15,
    "network_isolation": 0.20,
    "evidence_avoidance": 0.15,
    "authority_mismatch": 0.10
  },
  "thresholds": {
    "min_claims_for_analysis": 5,
    "score_levels": {
      "critical": 0.80,
      "high": 0.60,
      "moderate": 0.40,
      "low": 0.20
    }
  }
}
