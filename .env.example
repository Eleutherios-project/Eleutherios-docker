# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_HOST=neo4j
NEO4J_USER=neo4j
NEO4J_PASSWORD=aegistrusted

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=aegis
POSTGRES_PASSWORD=aegis_trusted_2025
