<script>
    // Global variables
    const API_URL = 'http://localhost:8001';
    let userPreferences = [
        { source: "Academic Research", score: 0.9 },
        { source: "Expert Testimony", score: 0.8 },
        { source: "Government Publications", score: 0.7 },
        { source: "Mainstream Media", score: 0.5 },
        { source: "Social Media", score: 0.1 }
    ];
    
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        // Show default tab
        showTab('search');
        
        // Render initial preferences
        renderPreferences();
        
        // Add enter key listener for search
        document.getElementById('search-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                performSearch();
            }
        });
    });
    
    // Tab switching function
    function showTab(tabName) {
        // Hide all tab contents
        const tabContents = document.querySelectorAll('.tab-content');
        tabContents.forEach(content => {
            content.classList.remove('active');
        });
        
        // Deactivate all tabs
        const tabs = document.querySelectorAll('.tab');
        tabs.forEach(tab => {
            tab.classList.remove('active');
        });
        
        // Show the selected tab content
        document.getElementById(`content-${tabName}`).classList.add('active');
        
        // Activate the selected tab
        document.getElementById(`tab-${tabName}`).classList.add('active');

        if (tabName === 'graph' && !graphSvg) {
        initGraph();
        }
    }
    
    // Perform search function
    function performSearch() {
        const query = document.getElementById('search-input').value.trim();
        if (!query) {
            alert('Please enter a search query');
            return;
        }
        
        // Show loading indicator
        document.getElementById('loading').style.display = 'block';
        document.getElementById('response-area').innerHTML = '';
        
        // Get include details option
        const includeDetails = document.getElementById('include-details').checked;
        
        // Get user ID
        const userId = document.getElementById('user-id').value.trim() || 'anonymous';
        
        console.log("Sending request to API:", {
            query: query,
            user_id: userId,
            include_details: includeDetails
        });
        
        // Modified API call to use /api/ prefix for the proxy server
        fetch('/enhanced/query', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                query: query,
                user_id: userId,
                include_details: includeDetails
            })
        })
        .then(response => {
            console.log("API response status:", response.status);
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            console.log("API data received:", data);
            // Hide loading indicator
            document.getElementById('loading').style.display = 'none';
            
            // Show real response
            renderResponse(data);
        })
        .catch(error => {
            console.error("API error:", error);
            document.getElementById('loading').style.display = 'none';
            document.getElementById('response-area').innerHTML = 
                `<div class="response-container">
                    <h3>Error</h3>
                    <p>${error.message}</p>
                    <p>Please check that your API is running at http://localhost:8001/enhanced/query</p>
                </div>`;
        });
    }
    
    // Render search response
    function renderResponse(response) {
        if (!response) return;
        
        let html = `
            <div class="response-container">
                <div class="response-header">
                    <h2>Results for: "${response.query || 'Unknown Query'}"</h2>
                    <span class="confidence ${getConfidenceClass(response.confidence)}">
                        ${getConfidenceText(response.confidence)}
                    </span>
                </div>
                
                <div class="response-content">
                    ${response.answer || 'No response generated'}
                </div>
                
                <div class="sources-container">
                    <h3>Top Sources</h3>
                    <div class="sources-list">
        `;
        
        // Add sources
        if (response.sources && response.sources.length > 0) {
            response.sources.forEach(source => {
                html += `
                    <div class="source-item">
                        <div class="source-trust" style="background-color: ${getTrustColor(source.trust_score)}">
                            ${Math.round(source.trust_score * 10)}
                        </div>
                        <div class="source-text">
                            ${source.text || 'Unknown source'}
                        </div>
                    </div>
                `;
            });
        } else {
            html += `<p>No specific sources cited.</p>`;
        }
        
        html += `
                    </div>
                </div>
        `;
        
        // Add patterns if requested and available
        if (response.patterns && response.patterns.length > 0) {
            html += `
                <div class="patterns-container">
                    <h3>Significant Patterns</h3>
                    <div class="patterns-list">
            `;
            
            response.patterns.forEach(pattern => {
                html += `
                    <div class="pattern-item">
                        <div class="pattern-type">${formatPatternType(pattern.type)}</div>
                        <div class="pattern-description">
                            ${formatPatternDescription(pattern)}
                        </div>
                    </div>
                `;
            });
            
            html += `
                    </div>
                </div>
            `;
        }
        
        html += `</div>`;
        
        document.getElementById('response-area').innerHTML = html;
    }
    
    // Format pattern type
    function formatPatternType(type) {
        if (!type) return "Unknown Pattern";
        return type.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
    }
    
    // Format pattern description based on type
    function formatPatternDescription(pattern) {
        if (!pattern || !pattern.data) return "No pattern description available";
        
        const data = pattern.data;
        
        switch (pattern.type) {
            case 'correlation':
                return `${data.entity1} and ${data.entity2} frequently appear together (${data.cooccurrences} co-occurrences, lift: ${data.lift.toFixed(2)})`;
            
            case 'causal':
                return `${data.cause} may lead to ${data.effect} (confidence: ${data.confidence.toFixed(2)})`;
            
            case 'temporal_sequence':
                return `${data.first_event} tends to occur before ${data.second_event} (${data.sequence_count} sequences, confidence: ${data.temporal_confidence.toFixed(2)})`;
            
            case 'higher_order_effect':
                const intermediates = data.intermediate_factors.join(' → ');
                return `Chain effect: ${data.initial_cause} → ${intermediates} → ${data.final_effect}`;
            
            case 'influence':
                return `${data.entity} is a key influencer in the network (influence score: ${data.influence_score.toFixed(2)})`;
            
            default:
                return `Pattern involves: ${JSON.stringify(data)}`;
        }
    }
    
    // Get confidence class based on value
    function getConfidenceClass(confidence) {
        if (!confidence && confidence !== 0) return 'medium'; // Default if undefined
        
        if (confidence >= 0.7) return 'high';
        if (confidence >= 0.4) return 'medium';
        return 'low';
    }
    
    // Get confidence text based on value
    function getConfidenceText(confidence) {
        if (!confidence && confidence !== 0) confidence = 0.5; // Default if undefined
        
        const percent = Math.round(confidence * 100);
        if (confidence >= 0.7) return `High Confidence (${percent}%)`;
        if (confidence >= 0.4) return `Medium Confidence (${percent}%)`;
        return `Low Confidence (${percent}%)`;
    }
    
    // Get color for trust score
    function getTrustColor(score) {
        if (!score && score !== 0) score = 0.5; // Default if undefined
        
        // Create a cyberpunk color gradient
        if (score >= 0.8) return 'var(--neon-green)';
        if (score >= 0.6) return 'var(--neon-blue)';
        if (score >= 0.4) return 'var(--accent-color)';
        if (score >= 0.2) return 'var(--neon-purple)';
        return 'var(--neon-pink)';
    }
    
    // Render user preferences
    function renderPreferences() {
        let html = '';
        
        userPreferences.forEach((pref, index) => {
            html += `
                <div class="preference-item">
                    <input type="text" class="preference-source" value="${pref.source}" readonly>
                    <input type="number" class="preference-score" value="${pref.score}" readonly min="-1" max="1" step="0.1">
                    <button class="preference-button" onclick="removePreference(${index})">Remove</button>
                </div>
            `;
        });
        
        document.getElementById('preferences-list').innerHTML = html;
    }
    
    // Add a new preference
    function addPreference() {
        const source = document.getElementById('new-source').value.trim();
        const scoreStr = document.getElementById('new-score').value.trim();
        
        if (!source) {
            alert('Please enter a source name');
            return;
        }
        
        const score = parseFloat(scoreStr);
        if (isNaN(score) || score < -1 || score > 1) {
            alert('Please enter a valid trust score between -1 and 1');
            return;
        }
        
        // Add to preferences array
        userPreferences.push({ source, score });
        
        // Clear inputs
        document.getElementById('new-source').value = '';
        document.getElementById('new-score').value = '';
        
        // Re-render preferences
        renderPreferences();
    }
    
    // Remove a preference
    function removePreference(index) {
        userPreferences.splice(index, 1);
        renderPreferences();
    }
    
    // Save preferences
    function savePreferences() {
        const userId = document.getElementById('user-id').value.trim();
        
        if (!userId) {
            alert('Please enter a user ID');
            return;
        }
        
        // Make actual API call to save preferences - using the proxy path
        fetch('/enhanced/preferences', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                user_id: userId,
                preferences: userPreferences.map(p => ({
                    source: p.source,
                    trust_score: p.score
                }))
            })
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            // Show confirmation
            alert(`Preferences saved for user ${userId}`);
            console.log('Save preferences response:', data);
        })
        .catch(error => {
            console.error('Error saving preferences:', error);
            alert(`Error saving preferences: ${error.message}`);
        });
    }

// Graph state
let graphData = { nodes: [], edges: [] };
let graphSimulation = null;
let graphSvg, graphG, graphLink, graphNode;
let graphZoom;

// Initialize graph visualization
function initGraph() {
    graphSvg = d3.select("#graph-svg");
    const container = document.getElementById('graph-svg').parentElement;
    const width = container.clientWidth;
    const height = container.clientHeight;
    
    graphSvg.attr("width", width).attr("height", height);
    
    // Setup zoom
    graphZoom = d3.zoom()
        .scaleExtent([0.1, 10])
        .on("zoom", (event) => {
            if (graphG) graphG.attr("transform", event.transform);
        });
    
    graphSvg.call(graphZoom);
    
    // Main group
    graphG = graphSvg.append("g");
}

// Load graph data from API
async function loadGraphData() {
    const query = document.getElementById('graph-query-input').value.trim();
    if (!query) {
        alert('Please enter a query or entity ID');
        return;
    }
    
    const trustThreshold = parseFloat(document.getElementById('graph-trust-threshold').value);
    const maxNodes = parseInt(document.getElementById('graph-max-nodes').value);
    
    // Show loading
    document.getElementById('graph-loading').style.display = 'block';
    
    try {
        const response = await fetch(
            `${API_URL}/graph/query/${encodeURIComponent(query)}?max_nodes=${maxNodes}&min_trust=${trustThreshold}`,
            {
                method: 'GET',
                headers: { 'Accept': 'application/json' }
            }
        );
        
        if (!response.ok) {
            throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }
        
        graphData = await response.json();
        updateGraphStats();
        renderGraph();
        
    } catch (error) {
        console.error('Error loading graph:', error);
        alert(`Error loading graph: ${error.message}`);
    } finally {
        document.getElementById('graph-loading').style.display = 'none';
    }
}

// Render the graph
function renderGraph() {
    if (!graphG) initGraph();
    
    // Clear existing
    graphG.selectAll("*").remove();
    
    if (graphData.nodes.length === 0) {
        return;
    }
    
    const container = document.getElementById('graph-svg').parentElement;
    const width = container.clientWidth;
    const height = container.clientHeight;
    
    // Create links
    graphLink = graphG.append("g")
        .selectAll("line")
        .data(graphData.edges)
        .enter().append("line")
        .attr("class", d => `link ${d.type}`)
        .attr("stroke", d => getEdgeColor(d.type))
        .attr("stroke-width", d => d.weight || 1.5)
        .attr("stroke-opacity", 0.6);
    
    // Create nodes
    const nodeGroup = graphG.append("g")
        .selectAll("g")
        .data(graphData.nodes)
        .enter().append("g")
        .attr("class", d => `node ${d.type}`)
        .call(d3.drag()
            .on("start", graphDragStarted)
            .on("drag", graphDragged)
            .on("end", graphDragEnded))
        .on("mouseover", graphShowTooltip)
        .on("mouseout", graphHideTooltip);
    
    // Add circles
    nodeGroup.append("circle")
        .attr("r", d => d.size || 10)
        .attr("fill", d => getNodeColor(d.type))
        .attr("stroke", "#fff")
        .attr("stroke-width", 2)
        .style("filter", d => `drop-shadow(0 0 6px ${getNodeColor(d.type)})`);
    
    // Add labels
    nodeGroup.append("text")
        .attr("dy", d => (d.size || 10) + 15)
        .attr("text-anchor", "middle")
        .attr("fill", "var(--text-primary)")
        .style("font-size", "11px")
        .style("pointer-events", "none")
        .style("text-shadow", "0 0 3px var(--primary-bg)")
        .text(d => {
            const label = d.label || '';
            return label.length > 20 ? label.substring(0, 20) + '...' : label;
        });
    
    graphNode = nodeGroup;
    
    // Setup simulation
    const layoutType = document.getElementById('graph-layout').value;
    setupGraphSimulation(layoutType, width, height);
}

// Setup force simulation
function setupGraphSimulation(layoutType, width, height) {
    if (graphSimulation) {
        graphSimulation.stop();
    }
    
    if (layoutType === 'force') {
        graphSimulation = d3.forceSimulation(graphData.nodes)
            .force("link", d3.forceLink(graphData.edges)
                .id(d => d.id)
                .distance(d => 100 / (d.weight || 1)))
            .force("charge", d3.forceManyBody().strength(-300))
            .force("center", d3.forceCenter(width / 2, height / 2))
            .force("collision", d3.forceCollide().radius(d => (d.size || 10) + 5));
        
    } else if (layoutType === 'radial') {
        // Radial layout
        const centerNode = graphData.nodes.find(n => n.type === 'center') || graphData.nodes[0];
        const otherNodes = graphData.nodes.filter(n => n !== centerNode);
        
        centerNode.fx = width / 2;
        centerNode.fy = height / 2;
        
        const angleStep = (2 * Math.PI) / otherNodes.length;
        const radius = Math.min(width, height) / 3;
        
        otherNodes.forEach((node, i) => {
            const angle = i * angleStep;
            node.fx = width / 2 + radius * Math.cos(angle);
            node.fy = height / 2 + radius * Math.sin(angle);
        });
        
        graphSimulation = d3.forceSimulation(graphData.nodes)
            .force("link", d3.forceLink(graphData.edges).id(d => d.id).distance(100))
            .force("collision", d3.forceCollide().radius(d => (d.size || 10) + 5));
        
    } else if (layoutType === 'hierarchical') {
        // Hierarchical layout
        const levels = {};
        graphData.nodes.forEach(node => {
            const level = node.type === 'center' ? 0 : 1;
            if (!levels[level]) levels[level] = [];
            levels[level].push(node);
        });
        
        Object.keys(levels).forEach(level => {
            const nodes = levels[level];
            const y = height / (Object.keys(levels).length + 1) * (parseInt(level) + 1);
            const xStep = width / (nodes.length + 1);
            
            nodes.forEach((node, i) => {
                node.fx = xStep * (i + 1);
                node.fy = y;
            });
        });
        
        graphSimulation = d3.forceSimulation(graphData.nodes)
            .force("link", d3.forceLink(graphData.edges).id(d => d.id).distance(100))
            .force("collision", d3.forceCollide().radius(d => (d.size || 10) + 5));
    }
    
    graphSimulation.on("tick", graphTicked);
}

    // Simulation tick
    function graphTicked() {
        if (graphLink) {
            graphLink
                .attr("x1", d => d.source.x)
                .attr("y1", d => d.source.y)
                .attr("x2", d => d.target.x)
                .attr("y2", d => d.target.y);
        }
        
        if (graphNode) {
            graphNode.attr("transform", d => `translate(${d.x},${d.y})`);
        }
    }

    // Drag handlers
    function graphDragStarted(event, d) {
        if (!event.active) graphSimulation.alphaTarget(0.3).restart();
        d.fx = d.x;
        d.fy = d.y;
    }

    function graphDragged(event, d) {
        d.fx = event.x;
        d.fy = event.y;
    }

    function graphDragEnded(event, d) {
        if (!event.active) graphSimulation.alphaTarget(0);
        // Keep fixed after drag
    }

    // Tooltip handlers
    function graphShowTooltip(event, d) {
        const tooltip = document.getElementById('graph-tooltip');
        const title = document.getElementById('graph-tooltip-title');
        const content = document.getElementById('graph-tooltip-content');
        
        title.textContent = d.label;
        
        let html = `
            <div style="margin: 5px 0;">
                <strong>Type:</strong> ${d.type}<br>
                <strong>Trust:</strong> ${(d.trust_score * 100).toFixed(0)}%
            </div>
        `;
        
        if (d.metadata && d.metadata.description) {
            html += `<div style="margin-top: 8px; font-size: 11px; opacity: 0.8;">${d.metadata.description}</div>`;
        }
        
        content.innerHTML = html;
        
        tooltip.style.left = (event.pageX + 15) + 'px';
        tooltip.style.top = (event.pageY - 30) + 'px';
        tooltip.style.opacity = 1;
    }

    function graphHideTooltip() {
        document.getElementById('graph-tooltip').style.opacity = 0;
    }

    // Update stats
    function updateGraphStats() {
        document.getElementById('stat-graph-nodes').textContent = graphData.nodes.length;
        document.getElementById('stat-graph-edges').textContent = graphData.edges.length;
        
        const avgTrust = graphData.nodes.reduce((sum, n) => sum + n.trust_score, 0) / graphData.nodes.length;
        document.getElementById('stat-graph-trust').textContent = (avgTrust * 100).toFixed(0) + '%';
    }

    // Update layout
    function updateGraphLayout(layoutType) {
        const container = document.getElementById('graph-svg').parentElement;
        const width = container.clientWidth;
        const height = container.clientHeight;
        setupGraphSimulation(layoutType, width, height);
    }

    // Color helpers
    function getNodeColor(type) {
        const colors = {
            'source': '#00ccff',
            'claim': '#c252e1',
            'entity': '#00ffa3',
            'person': '#ffdd57',
            'document': '#ff1767',
            'center': '#00ccff',
            'related': '#a0a0a0'
        };
        return colors[type] || '#a0a0a0';
    }

    function getEdgeColor(type) {
        const colors = {
            'cites': '#00ccff',
            'supports': '#00e676',
            'opposes': '#ff3860',
            'mentions': '#a0a0a0',
            'influences': '#c252e1'
        };
        return colors[type] || '#a0a0a0';
    }

